        <script><![CDATA[(function executeRule(current, previous) {
    
    gs.info('[Kokoro BR] Task cancelled: ' + current.number);
    
    // 1. 取消SLA
    try {
        var slaEngine = new x_1821654_kokoro_0.KokoroSLAEngine();
        slaEngine.cancelSLA(current.getUniqueValue());
    } catch (e) {
        gs.error('[Kokoro BR] SLA cancel error: ' + e.message);
    }
    
    // 2. 减少志愿者任务计数
    if (!current.assigned_to.nil()) {
        try {
            var assignEngine = new x_1821654_kokoro_0.KokoroAutoAssignment();
            assignEngine.onTaskCompleted(current.getUniqueValue());
        } catch (e) {
            gs.error('[Kokoro BR] Task count update error: ' + e.message);
        }
    }
    
})(current, previous);]]></script>
