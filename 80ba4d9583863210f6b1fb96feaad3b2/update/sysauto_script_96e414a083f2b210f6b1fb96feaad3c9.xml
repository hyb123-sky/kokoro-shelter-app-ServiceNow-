        <script><![CDATA[(function() {
    gs.info('[Kokoro Scheduled] Starting weekly cleanup...');
    
    try {
        var thresholdDate = new GlideDateTime();
        thresholdDate.addDaysLocalTime(-90); // 保留90天的数据
        
        var deleted = 0;
        
        // 清理旧的分配历史
        var histGR = new GlideRecord('x_1821654_kokoro_0_assignment_history');
        histGR.addQuery('timestamp', '<', thresholdDate);
        histGR.query();
        
        while (histGR.next()) {
            histGR.deleteRecord();
            deleted++;
        }
        
        gs.info('[Kokoro Scheduled] Weekly cleanup complete: ' + deleted + ' old assignment records deleted');
        
    } catch (e) {
        gs.error('[Kokoro Scheduled] Weekly cleanup error: ' + e.message);
    }
    
})();]]></script>
